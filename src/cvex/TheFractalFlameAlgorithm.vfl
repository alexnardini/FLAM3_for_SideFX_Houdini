#define PSCL 0.001
#define FL "../ff_"
#define FP "../fp1_"
#define X {1,0}
#define Y {0,1}
#define O {0,0}

#pragma opname  "FLAM3"
#pragma oplabel "FLAM3"
#pragma opmininputs 1
#pragma opmaxinputs 1

#include <xaos.h>
#include <flame.h>
#include <flameff.h>

void _FLAM3(const string _bound_sIDX[]; const int _bound_SYS[]; int _bound_ptnum; const int _bound_XS; const float _bound_IW[], _bound_XST[]; float _bound_pscale, _bound_clr, _bound_Alpha; vector _bound_P)
{
    
    int idx, TM, FF, RIP, iter, MB, f3c;
    float pscl, clr, prv_clr, a, mbm; prv_clr=0; pscl=PSCL;
    vector2 tmp;
    // SYS
    FF   = _bound_SYS[0];
    RIP  = _bound_SYS[1];
    MB   = _bound_SYS[2];
    iter = _bound_SYS[3];
    f3c  = _bound_SYS[4];
    // Build genomes
    string sIDX[]=_bound_sIDX;
    gem GEM; GEM->gemBuild(sIDX, FF);
    // cast FLAME
    int     v1t[], v2t[], v3t[], v4t[], p1t[], p2t[], P1t[], PPL[], res, PFF; /* CAST */ res=GEM.res; v1t=GEM.v1t; v2t=GEM.v2t; v3t=GEM.v3t; v4t=GEM.v4t; p1t=GEM.p1t; p2t=GEM.p2t; P1t=GEM.P1t; PPL=GEM.PPL; PFF=GEM.PFF;
    float   v1w[], v2w[], v3w[], v4w[], p1w[], p2w[], P1w[], pbw[], _CLR[], OM[], A[]; /* CAST */ v1w=GEM.v1w; v2w=GEM.v2w; v3w=GEM.v3w; v4w=GEM.v4w; p1w=GEM.p1w; p2w=GEM.p2w; P1w=GEM.P1w; pbw=GEM.pbw; _CLR=GEM.CLR; OM=GEM.OM; A=GEM.A;
    vector2 x[], y[], o[], px[], py[], po[]; /* CAST */ x=GEM.x; y=GEM.y; o=GEM.o; px=GEM.px; py=GEM.py; po=GEM.po;
    // cast FF
    int     fp1t, fv1t, fv2t, fP1t, fP2t; /* CAST */ fp1t=GEM.fp1t; fv1t=GEM.fv1t; fv2t=GEM.fv2t; fP1t=GEM.fP1t; fP2t=GEM.fP2t;
    float   fp1w, fv1w, fv2w, fP1w, fP2w; /* CAST */ fp1w=GEM.fp1w; fv1w=GEM.fv1w; fv2w=GEM.fv2w; fP1w=GEM.fP1w; fP2w=GEM.fP2w;
    vector2 fx, fy, fo, pfx, pfy, pfo;    /* CAST */ fx=GEM.fx; fy=GEM.fy; fo=GEM.fo; pfx=GEM.pfx; pfy=GEM.pfy; pfo=GEM.pfo;
    // Build genome's parametrics
    gemPrm p1GMP, p2GMP, v1GMP, v2GMP, v3GMP, v4GMP, P1GMP;
    p1GMP->gemPrmBuild(sIDX, res, p1t, p1w);
    p2GMP->gemPrmBuild(sIDX, res, p2t, p2w);
    v1GMP->gemPrmBuild(sIDX, res, v1t, v1w);
    v2GMP->gemPrmBuild(sIDX, res, v2t, v2w);
    v3GMP->gemPrmBuild(sIDX, res, v3t, v3w);
    v4GMP->gemPrmBuild(sIDX, res, v4t, v4w);
    P1GMP->gemPrmBuild(sIDX, res, P1t, P1w);
    // CHAOS game
    vector2 mem=biunit();
    int XS=_bound_XS;
    // If XAOS, pick a starting iterator from distribution
    if(XS) idx=sample_cdf((float[])_bound_IW, nrandom('twister'));

    for(int i=0; i<iter; ++i){

        // Xoas ( old )
        // this do not always work: [Bug ID# 124486], SideFX Support Ticket [SESI #128304]
        // if(XS){ int sl=idx*res; idx=sample_cdf((float[])_bound_XST[sl:sl+res], nrandom('twister')); }
        //
        // XAOS ( new )
        if(XS){ idx=XAOS(idx, res, _bound_XST); }
        else idx=sample_cdf((float[])_bound_IW, nrandom("twister"));

        tmp=0;
        // pre
        if(pbw[idx] >0) V_PREBLUR(mem, pbw[idx]);
        if(p1w[idx] >0) mem  = FLAME(p1GMP, idx, p1t[idx], f3c, mem, X, Y, O, p1w[idx]);
        if(p2w[idx] >0) mem  = FLAME(p2GMP, idx, p2t[idx], f3c, mem, X, Y, O, p2w[idx]);
        // Var
        if(v1w[idx]!=0) tmp += FLAME(v1GMP, idx, v1t[idx], f3c, mem, x[idx], y[idx], o[idx], v1w[idx]);
        if(v2w[idx]!=0) tmp += FLAME(v2GMP, idx, v2t[idx], f3c, mem, x[idx], y[idx], o[idx], v2w[idx]);
        if(v3w[idx]!=0) tmp += FLAME(v3GMP, idx, v3t[idx], f3c, mem, x[idx], y[idx], o[idx], v3w[idx]);
        if(v4w[idx]!=0) tmp += FLAME(v4GMP, idx, v4t[idx], f3c, mem, x[idx], y[idx], o[idx], v4w[idx]);
        // Post
        if(P1w[idx] >0) tmp  = FLAME(P1GMP, idx, P1t[idx], f3c, tmp, X, Y, O, P1w[idx]);
        // Post affine
        if(PPL[idx]) affine(tmp, px[idx], py[idx], po[idx]);
        // Clr
        prv_clr=clr=_CLR[idx]+(OM[idx]*prv_clr);
        // Out
        mem=tmp;
    }
    // FF
    if(FF){

        tmp=0;
        // FF pre
        if(fp1w >0) mem  = FLAMEFF(FP, fp1t, f3c, mem, X, Y, O, fp1w);
        // FF Var
        if(fv1w!=0) tmp += FLAMEFF(FL, fv1t, f3c, mem, fx, fy, fo, fv1w);
        if(fv2w!=0) tmp += FLAMEFF(FL, fv2t, f3c, mem, fx, fy, fo, fv2w);
        // FF Post
        if(fP1w >0) tmp  = FLAMEFF(FP, fP1t, f3c, tmp, X, Y, O, fP1w);
        if(fP2w >0) tmp  = FLAMEFF(FP, fP2t, f3c, tmp, X, Y, O, fP2w);
        // FF Post affine
        if(PFF) affine(tmp, pfx, pfy, pfo);
        // FF Out
        mem=tmp;
    }
    a=A[idx];
    if(chkPT(RIP, mem, a)) removepoint(0, _bound_ptnum);
    else{
        
        pscl*=a;
        if(MB){ mbm=detail(1, "Tstep_mult", 0); pscl*=mbm; setpointattrib(0, "mb_mod", _bound_ptnum, mbm, "set"); }
        // OUT
        _bound_P=(vector)mem;
        _bound_clr=clr;
        _bound_pscale=pscl;
        _bound_Alpha=a;
    }
}

cvex
FLAM3(  const  string sIDX[] = {};
        const  int    SYS[]  = {};
        export int    ptnum  = 0;
        const  int    XS     = 0;
        const  float  IW[]   = {};
        const  float  XST[]  = {};
	    export float  pscale = 0;
	    export float  clr    = 0;
        export float  Alpha  = 0;
	    export vector P      = 0)
{
    _FLAM3(sIDX, SYS, ptnum, XS, IW, XST, pscale, clr, Alpha, P);
}
