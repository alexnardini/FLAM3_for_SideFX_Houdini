#pragma opname  "TFFAxformsactive"
#pragma oplabel "TFFAxformsactive"
#pragma opmininputs 1
#pragma opmaxinputs 1


void
_TFFAxformsactive(string _bound_sIDX[]; int _bound_POST[], _bound_RES)
{

    int inum = chi("../../flamefunc");
    int va[], POST[];
    string sIDX[];
    
    // ALL XFORMS/ITERATORS
    for(int i=0; i<inum; ++i){
        
        string iIDX = itoa(i+1);
        append(va, chi(concat("../../vactive_", iIDX)));
        int post = chi(concat("../../dopost_",  iIDX));
        float IWcheck = chf(concat("../../iw_", iIDX));
        if(IWcheck==0) va[i]=0;
        if(!va[i]) continue;
        append(sIDX, iIDX);
        append(POST, post);
    }

    // OUT
    _bound_sIDX = sIDX;
    _bound_POST = POST;
    _bound_RES  = len(sIDX);
}

cvex
TFFAxformsactive(   export string sIDX[] = {};
                    export int POST[] = {};
                    export int RES = 0)
{
    _TFFAxformsactive(sIDX, POST, RES);
}
