#pragma opname  "TFFApalettesimple"
#pragma oplabel "TFFApalettesimple"
#pragma opmininputs 1
#pragma opmaxinputs 1

void
_TFFApalettesimple(const float _bound_clr; vector _bound_Cd; const float _bound_mb_modulate)
{
    int domb, vizmb;
    vector color, pcHSV;
    pcHSV  = chv("../palettehsv_");
    domb   = chi("../domb");
    vizmb  = chi("../vizmb");

    float clr = _bound_clr;
    color = chramp("../palette", clr);
    if(pcHSV[0]!=0 || pcHSV[1]!=1 || pcHSV[2]!=1){
        vector clrHSV = rgbtohsv(color);
        clrHSV[0] += pcHSV[0];
        clrHSV[1] *= pcHSV[1];
        clrHSV[2] *= pcHSV[2];
        color = hsvtorgb(clrHSV);
    }
    if(domb && vizmb)
        color *= _bound_mb_modulate;
    _bound_Cd = color;
}

cvex
TFFApalettesimple( const float clr = 0;
	               export vector Cd = 1;
	               const float mb_modulate = 0)
{
    _TFFApalettesimple(clr, Cd, mb_modulate);
}
